class Screen_one(Screen):
    pass


class ScreenTwo(Screen):
    pass


class Screen_three(Screen):
    pass


class Screen_four(Screen):
    pass


class Screen_five(Screen):
    pass


class Screen_six(Screen):
    pass


class Screen_seven(Screen):
    pass

screen_manager = ScreenManager()

screen_manager.add_widget(Screen_one(name="Screen_one"))  # acceuil
screen_manager.add_widget(ScreenTwo(name="screen_two"))  # levels
screen_manager.add_widget(Screen_three(name="Screen_three"))  # stage 1
screen_manager.add_widget(Screen_four(name="Screen_four"))  # stage 2
screen_manager.add_widget(Screen_five(name="Screen_five"))  # stage 3
screen_manager.add_widget(Screen_six(name="Screen_six"))  # stage 4
screen_manager.add_widget(Screen_seven(name="Screen_seven"))  # stage 5


class Incredibot(App):

    def build(self):
        return screen_manager


sample_app = Incredibot()
sample_app.run()

